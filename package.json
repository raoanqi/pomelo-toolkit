{
  "name": "pomelo-toolkit",
  "version": "1.0.0",
  "description": "A utility function library built with TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "browser": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "preinstall": "npx check-node-version --node \">=18.0.0\" || (echo \"Node.js 版本过低，请安装 Node.js 18.0.0 或更高版本\" && exit 1)",
    "prebuild": "npm run clean",
    "build": "rollup -c",
    "prebuild:prod": "npm run clean",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "predev": "npm run clean",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "clean": "rimraf dist",
    "prepare": "husky",
    "prepublishOnly": "npm run build:prod && npm run test"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "typescript",
    "utils",
    "toolkit"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "check-node-version": "^4.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0"
  }
}
